<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FloorActivity">

    <android.widget.Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAllCaps="true"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/back_size"
        android:paddingLeft="26.5dp"
        android:background="@drawable/button_clear"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point : 0"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@id/button_back"
        app:layout_constraintBottom_toTopOf="@id/scroll_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        android:orientation="vertical"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.widget.Button
                android:id="@+id/button_stage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_floor"
                android:text="stage 1"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <android.widget.Button
                android:id="@+id/button_stage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_floor"
                android:text="stage 2"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/button_stage1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <android.widget.Button
                android:id="@+id/button_stage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_floor"
                android:text="stage 3"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/button_stage2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <android.widget.Button
                android:id="@+id/button_stage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_floor"
                android:text="stage 4"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/button_stage3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <android.widget.Button
                android:id="@+id/button_stage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_floor"
                android:text="stage 5"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/button_stage3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <android.widget.Button
                android:id="@+id/button_stage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_floor"
                android:text="stage 6"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/button_stage3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>