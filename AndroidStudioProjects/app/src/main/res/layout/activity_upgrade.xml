<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.UpgradeActivity">

    <TextView
        android:id="@+id/score_text_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_add_increase"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/button_add_increase"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="클릭 점수+a"
        android:textSize="20dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/button_critical_ratio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/double_need_text"
        app:layout_constraintTop_toBottomOf="@+id/score_text_upgrade" />
    <TextView
        android:id="@+id/double_need_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="@+id/button_add_increase"
        app:layout_constraintBottom_toBottomOf="@id/button_add_increase"
        app:layout_constraintLeft_toRightOf="@id/button_add_increase"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/button_critical_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="크리티컬 확률+a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/critical_ratio_text"
        app:layout_constraintTop_toBottomOf="@id/button_add_increase"/>
    <TextView
        android:id="@+id/critical_ratio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="@+id/button_critical_ratio"
        app:layout_constraintBottom_toBottomOf="@id/button_critical_ratio"
        app:layout_constraintLeft_toRightOf="@id/button_critical_ratio"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/button_critical_increase"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="크리티컬 점수+a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/critical_increase_text"
        app:layout_constraintTop_toBottomOf="@id/button_critical_ratio"/>
    <TextView
        android:id="@+id/critical_increase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="@+id/button_critical_increase"
        app:layout_constraintBottom_toBottomOf="@id/button_critical_increase"
        app:layout_constraintLeft_toRightOf="@id/button_critical_increase"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="clear"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:layout_margin="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_critical_increase"
        />
    <ImageView
        android:id="@+id/image_back"
        android:src="@drawable/back"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        />

</androidx.constraintlayout.widget.ConstraintLayout>