<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.UpgradeActivity">

    <TextView
        android:id="@+id/score_text_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inc_need_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/inc_need_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/crit_ratio_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_add_inc" />

    <Button
        android:id="@+id/button_add_inc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="클릭 점수+a"
        android:textSize="20dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toTopOf="@+id/inc_need_text"
        app:layout_constraintBottom_toBottomOf="@+id/inc_need_text"
        app:layout_constraintLeft_toRightOf="@id/inc_need_text"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/crit_ratio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/inc_need_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_crit_ratio"/>
    <Button
        android:id="@+id/button_crit_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="크리티컬 1%"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toRightOf="@id/crit_ratio_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/crit_ratio_text"
        app:layout_constraintBottom_toBottomOf="@+id/crit_ratio_text"/>
<!--
    <TextView
        android:id="@+id/crit_inc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/crit_ratio_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_add_inc"/>
    <Button
        android:id="@+id/button_crit_inc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="크리티컬 점수+1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toRightOf="@id/crit_inc_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_crit_ratio"/>
-->
    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="clear"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:layout_margin="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_crit_ratio"
        />
    <ImageView
        android:id="@+id/image_back"
        android:src="@drawable/back"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        />

</androidx.constraintlayout.widget.ConstraintLayout>