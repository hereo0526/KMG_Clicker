<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.UpgradeActivity">

    <TextView
        android:id="@+id/score_text_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inc_need_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/inc_need_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/crit_ratio_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_add_inc" />

    <android.widget.Button
        android:id="@+id/button_add_inc"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="비용 : "
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_upgrade"
        app:layout_constraintTop_toTopOf="@+id/inc_need_text"
        app:layout_constraintBottom_toBottomOf="@+id/inc_need_text"
        app:layout_constraintLeft_toRightOf="@id/inc_need_text"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/crit_ratio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/inc_need_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_crit_ratio"/>
    <android.widget.Button
        android:id="@+id/button_crit_ratio"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="비용 : "
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_upgrade"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toRightOf="@id/crit_ratio_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/crit_ratio_text"
        app:layout_constraintBottom_toBottomOf="@+id/crit_ratio_text"/>

    <android.widget.Button
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/back_size"
        android:paddingLeft="26.5dp"
        android:background="@drawable/button_clear"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/crit_ratio_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>