<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FightActivity">


    <android.widget.Button
        android:id="@+id/button_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/back_size"
        android:paddingLeft="26.5dp"
        android:background="@drawable/button_clear"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ProgressBar
        android:id="@+id/progress_enemy"
        android:layout_width="150dp"
        android:layout_height="27dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="100"
        android:progressTint="@color/green"
        android:progressBackgroundTint="@color/lightgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image_enemy"
        />
    <TextView
        android:id="@+id/enemy_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1000"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="@font/play_regular"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/progress_enemy"
        app:layout_constraintBottom_toBottomOf="@id/progress_enemy"
        />
    <ImageView
        android:id="@+id/image_enemy"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/wolf"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toTopOf="@id/score_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/image_sword_cut"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/sword_cut"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toTopOf="@id/score_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="380dp"
        app:layout_constraintBottom_toTopOf="@id/score_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/image_enemy"
        app:layout_constraintBottom_toTopOf="@id/my_health"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/critical_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="X2"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/my_health"
        app:layout_constraintLeft_toRightOf="@id/score_text"
        app:layout_constraintTop_toBottomOf="@id/image_enemy"
        />

    <ProgressBar
        android:id="@+id/progress_my"
        android:layout_width="150dp"
        android:layout_height="27dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="100"
        android:progressTint="@color/green"
        android:progressBackgroundTint="@color/lightgray"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_text"
        />
    <TextView
        android:id="@+id/hp_dec_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="-0"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/my_health"
        app:layout_constraintRight_toRightOf="@id/progress_my"
        />

    <TextView
        android:id="@+id/my_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="HP : 100"
        android:textSize="20dp"
        android:fontFamily="@font/play_regular"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/progress_my" />

    <android.widget.Button
        android:id="@+id/button_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="강화"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="130dp"
        android:background="@drawable/button_attack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_attack"
        app:layout_constraintTop_toBottomOf="@id/my_health"
        />
    <android.widget.Button
        android:id="@+id/button_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="공격"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_attack"
        app:layout_constraintBottom_toBottomOf="@id/button_upgrade"
        app:layout_constraintLeft_toRightOf="@id/button_upgrade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_upgrade"/>
    <android.widget.Button
        android:id="@+id/button_fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:drawableLeft="@drawable/swords_size"
        android:background="@drawable/button_fight"
        android:textColor="#ffffff"
        android:layout_marginBottom="60dp"
        android:paddingLeft="42.6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_attack"
        />
    <ImageView
        android:id="@+id/image_click"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/swords"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/progress_my"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/image_stage_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="@drawable/cut_screen"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/text_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승리"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:layout_marginTop="130dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="@id/image_stage_finish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/text_finish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.widget.Button
        android:id="@+id/button_stage_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나가기"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_attack"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_point"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
