<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <android.widget.Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAllCaps="true"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/back_size"
        android:paddingLeft="26.5dp"
        android:background="@drawable/button_clear"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.widget.Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초기화"
        android:textAllCaps="true"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_clear"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point : 0"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_reinforce"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.widget.Button
        android:id="@+id/button_reinforce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:color="#6A5475"
        android:text="강화"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_upgrade_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_adventure"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.widget.Button
        android:id="@+id/button_adventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:color="#6A5475"
        android:text="전투"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_upgrade_enter"
        app:layout_constraintTop_toTopOf="@id/button_reinforce"
        app:layout_constraintBottom_toBottomOf="@id/button_reinforce"
        app:layout_constraintLeft_toRightOf="@id/button_reinforce"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>